<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Disabled state - subdued text color -->
    <item android:state_enabled="false" android:color="?attr/colorOnSurfaceVariant" />
    
    <!-- Enabled state - normal text color -->
    <item android:state_enabled="true" android:color="?attr/colorOnPrimary" />
    
