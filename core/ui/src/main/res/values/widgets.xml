<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Todoster.Button" parent="Widget.Material3.Button">
        <item name="fontFamily">@font/raleway</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="fontVariationSettings">"'wght' 500"</item>
    </style>

    <style name="Widget.Todoster.Button.Primary" parent="Widget.Todoster.Button">
        <item name="rippleColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
        <item name="android:elevation">4dp</item>
        <item name="elevation">4dp</item>
    </style>


    <style name="PrimaryTitle">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="fontVariationSettings">"'wght' 600"</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PrimaryInput" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@color/md_theme_secondaryFixedDim</item>
        <item name="fontVariationSettings">"'wght' 400"</item>
        <item name="android:background">@drawable/text_input_background_ripple</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

</resources>