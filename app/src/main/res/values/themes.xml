<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Base.Theme.Todoster" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brand_yellow</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/medium_grey_text</item>
        <item name="android:textViewStyle">@style/TextAppearance.Body.Medium</item>
    </style>

    <style name="Theme.Todoster" parent="Base.Theme.Todoster" />

    <style name="TextAppearance.Title.Medium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/raleway</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="fontVariationSettings">"'wght' 500"</item>
    </style>

    <style name="TextAppearance.Body.Large" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/raleway</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="fontVariationSettings">"'wght' 400"</item>
    </style>

    <style name="TextAppearance.Body.Medium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/raleway</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="fontVariationSettings">"'wght' 400"</item>
    </style>

    <style name="TextAppearance.Label.Small" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/raleway</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="fontVariationSettings">"'wght' 500"</item>
    </style>


</resources>